const { ethers } = require("hardhat");

async function main() {
  // BSC Testnet addresses (checksummed)
  const VUSDT = "0x5eE30682b1B8f85e5E4F1a094794f0B3e7109F9C"; // Convert to checksum
  const USDT = "0x337610d27c682E347C9cD60BD4b3b107C9d34dDd";
  const ROUTER = "0xD99D1c33F9fC3444f8101754aBC46c52416550D1";

  // Convert addresses to checksum format
  const checksumVUSDT = ethers.getAddress(VUSDT);
  const checksumUSDT = ethers.getAddress(USDT);
  const checksumRouter = ethers.getAddress(ROUTER);

  const VenusArbitrage = await ethers.getContractFactory("VenusArbitrage");
  const venusArb = await VenusArbitrage.deploy(
    checksumVUSDT,
    checksumUSDT,
    checksumRouter
  );

  await venusArb.waitForDeployment();
  console.log("Deployed to:", await venusArb.getAddress());
}

main().catch((error) => {
  console.error(error);
  process.exitCode = 1;
});
